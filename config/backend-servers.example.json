{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time@latest", "--local-timezone=America/Los_Angeles"]
    },
    "calculator": {
      "command": "uvx",
      "args": ["--from", "calculator-mcp-server", "--", "calculator-mcp-server", "--stdio"]
    },
    "search": {
      "command": "bunx",
      "args": ["--bun", "mcp-omnisearch@latest"],
      "env": {
        "BRAVE_API_KEY": "<YOUR_BRAVE_API_KEY>",
        "PERPLEXITY_API_KEY": "<YOUR_PERPLEXITY_API_KEY>"
      }
    },
    "browser": {
      "command": "bunx",
      "args": ["--bun", "@playwright/mcp@latest", "--browser", "webkit"]
    },
    "excel": {
      "command": "bunx",
      "args": ["--bun", "@negokaz/excel-mcp-server@latest"],
      "env": {
        "EXCEL_MCP_PAGING_CELLS_LIMIT": "4000"
      }
    }
  }
}
