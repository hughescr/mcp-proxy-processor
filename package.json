{
  "name": "@hughescr/mcp-proxy-processor",
  "version": "1.3.0",
  "description": "An MCP proxy server that allows selective re-exposure of tools from backend MCP servers through configurable groups",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "tool-management",
    "ai-agent",
    "claude",
    "anthropic"
  ],
  "homepage": "https://github.com/hughescr/mcp-proxy-processor#readme",
  "bugs": {
    "url": "https://github.com/hughescr/mcp-proxy-processor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hughescr/mcp-proxy-processor.git"
  },
  "license": "Apache-2.0",
  "author": "Craig R. Hughes <craig.git@rungie.com>",
  "type": "module",
  "bin": {
    "mcp-proxy": "./dist/cli.js"
  },
  "files": [
    "dist/cli.js",
    "docs/ARGUMENT_MAPS.md",
    "docs/PROJECT_MCP_CONFIG.md",
    "docs/RESOURCES_AND_PROMPTS.md",
    "README.md",
    "TROUBLESHOOTING.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build --production --target=node --outfile=dist/cli.js.tmp src/cli.ts && echo '#!/usr/bin/env node' | cat - dist/cli.js.tmp > dist/cli.js && rm dist/cli.js.tmp && chmod +x dist/cli.js",
    "claude": "tmux -CC new -A -n Claude -s mcp-proxy-processor ~/.claude/claude-smart.sh",
    "codex": "tmux -CC new -A -n Codex -s apartment-manager bunx --bun @openai/codex@latest --search",
    "dev": "bun --preserve-symlinks run src/cli.ts",
    "full-test": "eslint --fix && tsc && INTEGRATION_TESTS=true bun test",
    "lint": "eslint --cache --format=overview",
    "lint:fix": "eslint --cache --fix --format=overview",
    "lint:tsc": "tsc",
    "package-check": "bunx npm-check@latest -i bun:test",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:integration": "INTEGRATION_TESTS=true bun test",
    "postversion": "git commit -m \"Bump package version to $npm_package_version\" package.json; git flow release start $npm_package_version; git flow release finish -m $npm_package_version $npm_package_version; git checkout develop; git merge main"
  },
  "resolutions": {
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@hughescr/eslint-config-default": "^4.0.1",
    "@hughescr/logger": "^2.7.2",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "commander": "^14.0.2",
    "env-paths": "^3.0.0",
    "eslint": "^9.38.0",
    "eslint-formatter-overview": "^2.0.0",
    "eslint-formatter-unix": "^9.0.1",
    "eslint-plugin-package-json": "^0.59.0",
    "fuse.js": "^7.1.0",
    "ink": "^6.4.0",
    "ink-select-input": "^6.2.0",
    "ink-testing-library": "^4.0.0",
    "ink-text-input": "^6.0.0",
    "jsonata": "^2.1.0",
    "lodash": "^4.17.21",
    "make-dir": "^5.1.0",
    "react": "^19.2.0",
    "react-devtools-core": "^7.0.1",
    "react-reconciler": "^0.33.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "uri-templates": "^0.2.0",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=24.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
