{
  "name": "mcp-proxy-processor",
  "version": "0.1.0",
  "private": true,
  "description": "An MCP proxy server that allows selective re-exposure of tools from backend MCP servers through configurable groups",
  "license": "Apache-2.0",
  "author": "Craig R. Hughes <craig.git@rungie.com>",
  "type": "module",
  "bin": {
    "mcp-proxy": "./dist/cli.js"
  },
  "scripts": {
    "claude": "tmux -CC new -A -n Claude -s apartment-manager bunx --bun @anthropic-ai/claude-code@latest --mcp-config ~/.claude/mcp.json",
    "codex": "tmux -CC new -A -n Codex -s apartment-manager bunx --bun @openai/codex@latest --search",
    "dev": "bun run src/cli.ts",
    "full-test": "eslint --fix && tsc && bun test",
    "lint": "eslint --fix",
    "package-check": "bunx npm-check@latest -i bun:test",
    "test": "bun test",
    "postversion": "git commit -m \"Bump package version to $npm_package_version\" package.json; git flow release start $npm_package_version; git flow release finish -m $npm_package_version $npm_package_version; git checkout develop; git merge master"
  },
  "resolutions": {
    "ink-enhanced-select-input/react": "^19.1.1"
  },
  "dependencies": {
    "@hughescr/logger": "^2.6.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "commander": "^14.0.1",
    "ink": "^6.3.1",
    "ink-enhanced-select-input": "^0.2.0",
    "ink-text-input": "^6.0.0",
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@hughescr/eslint-config-default": "^4.0.1",
    "@types/bun": "^1.2.23",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.16",
    "eslint": "^9.36.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-package-json": "^0.56.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=24.x"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
